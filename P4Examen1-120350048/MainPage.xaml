<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P4Examen1_120350048.MainPage">

    <StackLayout>
        <Frame BackgroundColor="DarkOrange" Padding="24" CornerRadius="0">
            <Label Text="==Nueva Ubicacion == Ubicaciones Salvadas!" HorizontalTextAlignment="Center" TextColor="White" FontSize="28"/>
        </Frame>

        <Entry Placeholder="Latitud Actual " x:Name="LatAc"/>
        <Entry Placeholder="Longitud Actual" x:Name="LonAc"/>

        <Entry Placeholder="Describa la ubicacion" x:Name="DesUb"/>
        
        <Entry Placeholder="Descripcion corta" x:Name="DesCo"/>

        <Button Text="Salvar Ubicacion"
                TextColor="White"
                BackgroundColor="Orange"
                BorderColor="Black"
                BorderWidth="3"
                CornerRadius="20"
                WidthRequest="50"
                HeightRequest="60"/>


        <Button Text="Ubicaciones Salvadas "
                TextColor="White"
                BackgroundColor="Orange"
                BorderColor="Black"
                BorderWidth="3"
                CornerRadius="20"
                WidthRequest="50"
                HeightRequest="60" />
             




    </StackLayout>

</ContentPage>
